@model Product

<h3 class="p-2 bg-primary text-white text-center">Update Product</h3>

<form asp-action="UpdateProduct" methode="post">
    <div class="form-group">
        <lable asp-for="Id"></lable>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <lable asp-for="Name"></lable>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <lable asp-for="Category"></lable>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <lable asp-for="PurchasePrice"></lable>
        <input asp-for="PurchasePrice" class="form-control" />
    </div>
    <div class="form-group">
        <lable asp-for="RetailPrice"></lable>
        <input asp-for="RetailPrice" class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
